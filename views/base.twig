<!DOCTYPE html>
<html {{ site.language_attributes }}>
    <head>
        {{ function('wp_head') }}
    </head>

    <body>
        <div id="page">

            <header>
                {% block header %}
                    {% include "parts/header.twig" with {'websites' : websites, 'theme_uri' : theme_uri} %}
                {% endblock %}                
            </header>    

            <main>
                {% block content %}
                {% endblock %}
            </main>

            <section>
                <footer>
                    {% block footer %}
                        {% include "parts/footer.twig" with {'websites' : websites, 'theme_uri' : theme_uri} %}
                    {% endblock %}
                </footer>
            </section>
            
        </div>        
    </body>
</html>